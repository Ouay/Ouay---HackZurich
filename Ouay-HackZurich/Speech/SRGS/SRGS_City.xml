<?xml version="1.0" encoding="utf-8"?>
<grammar version="1.0" xml:lang="en-US" mode="voice" root="location"
 xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">

  <rule id="location">
    <item>
      Fly me to </item>
        <ruleref uri="#city"/>
      </rule>

  <rule id="city">
    <one-of>
      <item> Boston </item>
      <item> Madrid </item>
    </one-of>
  </rule>

</grammar>