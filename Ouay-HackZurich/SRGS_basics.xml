<?xml version="1.0" encoding="utf-8"?>

<grammar xml:lang="en-US" root="ouay"
tag-format="semantics/1.0" sapi:alphabet="x-microsoft-ups"
version="1.0" xmlns="http://www.w3.org/2001/06/grammar"
xmlns:sapi="http://schemas.microsoft.com/Speech/2002/06/SRGSExtensions">

  <!--This grammar should be able to recognize the following (examples) :
      Ouay I will come back at 3 p.m
      Ouay We come back at 12 a.m
      Ouay I will come back in 2 hours -->
  
  <rule id="ouay">
    <one-of>
      <item><token sapi:pron="W E I" >ouay</token> </item>
      <item>way<tag>out ="ouay";</tag></item>
      <ruleref uri="#ignorePerson" />
    </one-of>
  </rule>

  <rule id="ignorePerson"> <!--ignores I or we for example-->
    <ruleref special="GARBAGE"/>
    <ruleref uri="verb" />
  </rule>

  <rule id="verb">
    <one-of>
      <item>will be</item>
      <item>come</item>
      <ruleref uri="ignoreBack"/>
    </one-of>
  </rule>

  <rule id="ignoreBack"> <!--ignore the keyword back-->
    <ruleref special="GARBAGE"/>
    <ruleref uri="hours"/>
  </rule>

  <rule id="hours">
    <one-of>
      <item>one</item>
      <item>two</item>
      <item>three</item>
      <item>four</item>
      <item>five</item>
      <item>six</item>
      <item>seven</item>
      <item>eight</item>
      <item>nein</item>
      <item>ten</item>
      <item>eleven</item>
      <item>twelve</item>
      <ruleref uri="WhatDoesHoursMean"/>
    </one-of>
  </rule>

  <rule id="WhatDoesHoursMean">
    <one-of>
      <item>hours</item>
      <item>p.m</item>
      <item>a.m</item>
    </one-of>
  </rule>
  
</grammar>